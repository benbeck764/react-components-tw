{
  "name": "@benbeck764/react-components-tw",
  "version": "0.0.1",
  "description": "Base components built utilizing Tailwind CSS & Radix UI.",
  "author": "Ben Beck",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benbeck764/react-components-tw.git",
    "directory": "packages/base"
  },
  "keywords": [
    "react",
    "tailwind",
    "css",
    "radix"
  ],
  "bugs": {
    "url": "https://github.com/benbeck764/react-components-tw/issues"
  },
  "homepage": "https://github.com/benbeck764/react-components-tw#readme",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "main": "dist/index.mjs",
  "module": "dist/index.js",
  "types:": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && pnpm build:tailwind",
    "build:tailwind": "npx tailwindcss -i ./src/tailwind.css -o ./dist/styles.css --postcss --minify",
    "clean": "rimraf dist && rimraf node_modules",
    "clean:dist": "rimraf dist",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/themes": "^2.0.0",
    "@storybook/addon-essentials": "7.5.1",
    "@storybook/addon-interactions": "7.5.1",
    "@storybook/addon-links": "7.5.1",
    "@storybook/addon-onboarding": "1.0.8",
    "@storybook/blocks": "7.5.1",
    "@storybook/react": "7.5.1",
    "@storybook/react-vite": "7.5.1",
    "@storybook/testing-library": "0.2.2",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10",
    "postcss": "^8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "storybook": "7.5.1",
    "storybook-dark-mode": "^3.0.1",
    "tailwindcss": "^3",
    "typescript": "^5.2.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.6.0"
  },
  "peerDependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/themes": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
